<h2 class="mt-5">Lista de proyectos</h2>
<div class="row list-projects">
  {{#each proyectos as |item|}}
    <div class="col-3">
      <div class="item-project">
        <h4>{{item.titulo}}</h4>
        <P>{{item.descripcion}}</P>
        <p><a href="{{item.url}}">{{item.url}}</a></p>
        <p>{{item.cliente}}</p>
        <p>{{item.categoria}}</p>
        <a href="/proyectos({{item._id}}" class="btn btn-block btn-info">Ver detalle</a>
      </div>
    </div>
  {{/each}}
</div>